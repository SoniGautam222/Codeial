<link rel="stylesheet" href="/css/user_profile.css" />
<h1>Codeial / Profile page</h1>

<% if ( user.id == profile_user.id) {%>
<!-- if the user matches then show the form ! -->

<form action="/users/update/<%= profile_user.id %>" method="POST">
    <input type="text" name="name" placeholder="your name" value="<%= profile_user.name %>" requires>
    <input type="text" name="email" placeholder="your email" value="<%= profile_user.email %>" requires>
    <input type="submit" value="update">
</form>
<% } else { %>
<!-- else show only the profile info -->

<p><%= profile_user.name %></p>
<p><%= profile_user.email %></p>

<% }%>
